{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "removeComments": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": false,
    "tsBuildInfoFile": null
  },
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__/**/*",
    "node_modules",
    "dist",
    "**/*.d.ts"
  ]
}
