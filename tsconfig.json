{
  "compilerOptions": {
    "target": "ES2020", // Or a later version
    "module": "CommonJS", // Or "ESNext" if you're using ES modules everywhere
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // If you load JSON files
    "baseUrl": "./", // Needed for module resolution
    "paths": {
      "@/*": ["src/*"] // Example alias, adjust if needed
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
